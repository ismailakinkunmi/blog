<h1>Get post by id</h1>

<div > 
  <div class="post">
    <div class="post_comments">
      <h4><%=@post.title%> by: <%=@post.author.name%></h4>
      <span>Comments: <%=@post.comment_counter%>, Likes: <%=@post.like_counter%></span>
    </div>
    <p class='text'><%=@post.text%></p>
  </div>

  <div class= "comments">
    <%@post.comment.each do |comment|%>
     <p><%= comment.author.name %>: <%=comment.text%></p>
    <%end%>
  </div>
</div>
